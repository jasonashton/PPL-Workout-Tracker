        <td><%= gain.overhead %></td>
        <td><%= gain.incline %></td>
        <td><%= gain.lateral %></td>
        <td><%= gain.pushdown %></td>
        <td><%= gain.tricep %></td>
        <td><%= gain.shrugs %></td>
        <td><%= link_to 'Show', gain %></td>
        <td><%= link_to 'Edit', edit_gain_path(gain) %></td>
        <td><%= link_to 'Destroy', gain, method: :delete,
                                  data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

