<h2><%= name %></h2>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Bench</th>
      <th>Overhead</th>
      <th>Incline</th>
      <th>Lateral</th>
      <th>Pushdown</th>
      <th>Tricep</th>
      <th>Shrugs </th>
    </tr>
  </thead>

  <tbody>
    <% @gains.where(name: name, day: "Push").each do |gain| %>
